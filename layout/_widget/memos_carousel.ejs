<%- partial('_pre') %>
<section class="widget <%- page.widget_platform %>">
    <%- partial('header', {item: item}) %>
    <div class='content'>
        <div class='bber-talk'>
            <ul class='talk-list'><%- item.placeholder %></ul>
        </div>
    </div>
    <script>
        <% var api = item.url; %>
        <% var params = 'api/v1/memos?filter=creator=="users/' + item.creatorId + '"%26%26visibilities==["PUBLIC","PROTECTED"]&limit=' + item.limit %>
        <% if (!api.endsWith("/")) { %>
            <% api += "/"; %>
        <% } %>
        var bbCarouselMemos = {
            api: '<%- api %>' + '<%- params %>',
            image_icon: '<i class="fa-solid fa-image"></i>',
            link_icon: '<i class="fa-solid fa-link"></i>',
        }
    </script>
    <script>volantis.js("<%- theme.cdn.memos_carousel_js %>");</script>
</section>